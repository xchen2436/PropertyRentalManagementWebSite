@model IEnumerable<PropertyRentalManagementWebSite.Models.Manager>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
}

<h1>Welcome To Admin Page</h1>

<p>
    <a asp-action="Create">Create New Manager</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ManagerUsername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerUsername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ManagerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ManagerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ManagerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
